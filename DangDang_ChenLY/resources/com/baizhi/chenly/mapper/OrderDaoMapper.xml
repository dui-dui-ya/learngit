<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.chenly.dao.OrderDao">
	
	<insert id="insertOrder">
		<selectKey keyProperty="orderId" resultType="int" order="BEFORE" >
			select d_order_seq.nextval from dual
		</selectKey>
		insert into d_order
		values(#{orderId},#{order.num},#{order.createDate},#{order.price},
		#{order.address.addressId},#{order.user.userId},#{order.status,jdbcType=INTEGER})
	</insert>
	<delete id="deleteOrderById">
		delete from d_order
		where id = #{orderId}
	</delete>
	
	<resultMap type="Order" id="OrderMap">
		<id column="orderId" property="orderId"/>
		<result column="num" property="num"/>
		<result column="createDate" property="creatDate"/>
		<result column="price" property="price"/>
		<result column="status" property="status"/>
		<association property="address" javaType="Address">
			<id column="orderAddrId" property="orderAddrId"/>
		</association>
		<association property="user" javaType="User" >
			<id column="orderUid" property="orderUid"/>
		</association>
	</resultMap>
	<!-- 根据id查询订单信息 -->
	<select id="selectOrderById" resultMap="OrderMap">
		select id as orderId,num as num,create_date as createDate,price as price,
			order_addrId as orderAddrId,order_uid as orderUid,status as status 
		from d_order
		where order_id=#{orderId}
	</select>
</mapper>
